<% if @friend_requesters.length > 0 %>
<h2>Pending friend requests</h2>
<ul>
<% @friend_requesters.each do |fr| %>
  <li><%= fr.full_name %> (<%= fr.username %>)
  <%= button_to "Add Friend", friendships_path, method: :post, params: {"friend_id" => fr.id} %> </li>
<% end %>
</ul>
<% end %>

<h2>Posts</h2>

<ul>
<% @posts.each do |post| %>
<li><b><%= link_to post.title, post_path(post) %></b>, by
<%= post.user.username %><br>
<%= post.short_content %>
</li>
<% end %>
</ul>

