<h2>Login</h2>

<% if flash[:errors] && (flash[:errors].length>0) %>
<ul>
<% flash[:errors].each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>
<% end %>


<%= form_tag login_path, method: :post do %>
<p>Username: <%= text_field_tag :username %></p>

<p>Password: <%= password_field_tag :password %></p>

<p><%= submit_tag "Login" %></p>

<% end %>